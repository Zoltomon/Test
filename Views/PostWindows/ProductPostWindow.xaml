<Window x:Class="Test4.Views.PostWindows.ProductPostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test4.Views.PostWindows"
        mc:Ignorable="d"
        Title="Добавление продукта" Height="350" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите название продукта:" Style="{StaticResource TxbBlck}"/>
            <TextBox Name="TxbNameProduct"/>
            <TextBlock Text="Введите цену продукта:" Style="{StaticResource TxbBlck}"/>
            <TextBox Name="TxbPriceProduct"/>
        </StackPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Button Content="Сохранить" Name="BtnSave" Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
