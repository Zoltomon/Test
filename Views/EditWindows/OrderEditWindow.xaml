<Window x:Class="Test4.Views.EditWindows.OrderEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test4.Views.EditWindows"
        mc:Ignorable="d"
        Title="OrderEditWindow" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Выберите продукт:" Style="{StaticResource TxbBlck}"/>
            <ComboBox Name="CmbProduct"/>
            <TextBlock Text="Введите описание:" Style="{StaticResource TxbBlck}"/>
            <TextBox Name="TxbDescription" TextWrapping="Wrap" Height="100" TextChanged="TxbDescription_TextChanged"/>
            <TextBlock Name="MaxTxbLength" Foreground="Gray"/>
        </StackPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Button Content="Сохранить" Name="BtnSave" Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
