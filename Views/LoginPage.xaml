<Page x:Class="Test5.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test5.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <TextBlock Text="Введите логин:"/>
            <TextBox Name="TxbLogin"/>
            <TextBlock Text="Введите пароль:"/>
            <TextBox Name="TxbPassword"/>
            <Button Content="Войти" Name="BtnAuto" Click="BtnAuto_Click"/>
        </StackPanel>
    </Grid>
</Page>
