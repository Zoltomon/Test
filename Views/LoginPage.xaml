<Page x:Class="Test4.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test4.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Введите логин:" FontSize="18"/>
            <TextBox Name="TxbLogin"/>
            <TextBlock Text="Введите пароль:" FontSize="18"/>
            <TextBox Name="TxbPassword"/>
            <Button Content="Войти" Name="BtnAutorization" Click="BtnAutorization_Click"/>
        </StackPanel>
    </Grid>
</Page>
