<Window x:Class="Test5.Views.EditOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test5.Views"
        mc:Ignorable="d"
        Title="EditOrderWindow" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <ComboBox Name="CmbBxProduct"/>
            <TextBox Name="TxbDescription"/>
            <Button Name="BtnSave" Click="BtnSave_Click" Content="Сохранить"/>
        </StackPanel>
    </Grid>
</Window>
